---
const { info } = Astro.props
const { theme = {} } = info
const { isDark = false } = theme
---

<div class="info-container">
  <h1 class="title">
    <a href="/" class="title-link">
    </a>
  </h1>
  <h2 class={`subtitle ${isDark ? 'dark' : 'light'}`}>
    #{info.number} - {info.title}
  </h2>
  <a href="/" class={`back-link ${isDark ? 'dark' : 'light'}`}>
    ‚Üê Volver a los proyectos
  </a>
</div>
<style>
  .info-container {
    display: none;
    position: absolute;
    left: 1rem;
    bottom: 1rem;
    padding: 0.25rem 2rem;
    border-radius: 0.5rem;
  }

  @media (min-width: 640px) {
    .info-container {
      display: block;
    }
  }

  .title {
    font-weight: bold;
    margin-top: 1rem;
    animation: fade-in-up 0.5s ease-out;
  }

  .title-link {
    font-size: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: transform 0.3s;
  }

  .title-link:hover {
    transform: scale(1.1);
  }

  .title-content {
    display: flex;
    flex-direction: column;
    text-align: center;
    line-height: 1;
  }

  .title-number {
    letter-spacing: -0.05em;
    font-size: 2.25rem;
    padding: 0.25rem;
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    display: inline-block;
  }

  .title-number.light {
    background-image: linear-gradient(to right, #94a3b8, #475569);
  }

  .title-number.dark {
    background-image: linear-gradient(to right, #f1f5f9, #94a3b8, #64748b);
  }

  .title-text {
    letter-spacing: -0.05em;
    font-size: 0.875rem;
  }

  .title-text.light {
    color: rgba(255, 255, 255, 0.8);
  }

  .title-text.dark {
    color: rgba(255, 255, 255, 0.8);
  }

  .subtitle {
    font-weight: 600;
    animation: fade-in 0.5s ease-out;
    animation-delay: 0.3s;
    margin-top: 0.5rem;
    font-size: 1rem;
    text-align: center;
    letter-spacing: -0.05em;
  }

  .subtitle.light {
    color: #ca8a04;
  }

  .subtitle.dark {
    color: #facc15;
  }

  .back-link {
    font-size: 0.75rem;
    animation: fade-in 0.5s ease-out;
    animation-delay: 0.8s;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .back-link.light {
    color: rgba(0, 0, 0, 0.9);
  }

  .back-link.dark {
    color: rgba(255, 255, 255, 0.9);
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(0.5rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>